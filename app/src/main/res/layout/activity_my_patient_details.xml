<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    tools:context=".MyPatientDetailsActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Information"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />



    <androidx.cardview.widget.CardView

        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F1F6FA"
        app:cardCornerRadius="30dp"

        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"

        android:padding="24dp">

    <TextView
        android:id="@+id/patientDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />



        <TextView
        android:id="@+id/appointmentDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/patientDetailsTextView"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/chat"
        android:scaleType="fitCenter"
        android:textSize="16dp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Upload File"
        android:layout_below="@+id/imageUpload"
        android:layout_marginTop="16dp"
        app:cornerRadius="10dp"/>

    <ImageView
        android:id="@+id/imageUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/appointmentDetailsTextView" />


</LinearLayout>
