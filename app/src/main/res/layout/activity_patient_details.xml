<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#4598C8ED"
    tools:context=".PatientDetailsActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/patientEmailTextView"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Patient Information"/>

    <!-- res/layout/activity_patient_details.xml -->
    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F1F6FA"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"
            android:text="Patient Personal Data:"/>
    <TextView
        android:id="@+id/patientNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:id="@+id/patientBirthdayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/patientNameTextView"
        android:textStyle="bold"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:id="@+id/patientGenderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/patientBirthdayTextView"
        android:layout_marginBottom="1dp"/>

        <TextView
            android:id="@+id/patientChronicDiseasesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/patientGenderTextView"
            android:layout_marginBottom="1dp"/>

    <TextView
        android:id="@+id/patientPhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/patientChronicDiseasesTextView"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/patientPhoneTextView"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="10dp"
        android:text="Appointment Details:"/>

    <TextView
        android:id="@+id/appointmentDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/patientEmailTextView"
        android:layout_marginBottom="16dp"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <Button
        android:id="@+id/comeButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Come"
        android:onClick="handleComeButtonClick"
        android:layout_marginLeft="16dp"
        />

    <Button
        android:id="@+id/didNotComeButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Did Not Come"
        android:layout_below="@id/comeButton"
        android:layout_marginLeft="16dp"
        android:backgroundTint="#EA7575"
        android:enabled="true"/>
</LinearLayout>


</LinearLayout>
